{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**",
          "assets/**",
          "models/**",
          "configs/**",
          "routes/**",
          "controllers/**",
          "middlewares/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js",
      "headers": {
        "Access-Control-Allow-Origin": "https://elitesurfing.vercel.app",
        "Access-Control-Allow-Credentials": "true",
        "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE,OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Authorization, X-Device-Type",
        "Vary": "Origin"
      }
    },
    {
      "src": "/stripe-webhook",
      "dest": "server.js",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "rewrites": [
    {
      "src": "/cookie-setter",
      "dest": "/api/auth/cookie-setter"
    }
  ]
}
